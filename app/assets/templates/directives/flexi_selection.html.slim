.flexi.row(ng-repeat="type in ad_hoc" class="{{type.name}}")
  p
    |{{type.option_type.presentation}}
  .option(ng-repeat="option in type.ad_hoc_option_values")
    input(type="radio"
          name="{{option.name}}"
          id="{{option.name}}"
          ng-value="option.option_type_id"
          ng-model="option.isSelected")
    label(for="{{option.name}}"
          ng-bind="option.presentation")

.flexi.row(ng-repeat="type in custom" class="{{type.name}}")
  p
    |{{type.description}}
  .option
    input(type="radio"
          name="{{option.name}}"
          id="{{type.name}}"
          ng-value="type.id"
          ng-model="type.isSelected")
    label(for="{{type.name}}")
      input(type="text"
            name="{{type.name}}"
            value=""
            placeholder="{{type.presentation}}")
